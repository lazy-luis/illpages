                        }
                        else if (sender == rulelist[i].rulename && rulelist[i].regex != "skip") {
                            if (rulelist[i].valid) {
                                document.getElementById(o[0].id).style.backgroundColor = '#E1F6DF';
                                document.getElementById(o[0].id).style.borderColor = '#68BC5E';
                            } else {
