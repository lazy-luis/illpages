                            var reg = new RegExp(rulelist[i].regex);
                            var res = reg.test(event.target.value);
                            if (res) {
                                rulelist[i].imgsrc = "icon_success.png";
                                var imgctrl = "jha-dynarule-image-" + i.toString();
