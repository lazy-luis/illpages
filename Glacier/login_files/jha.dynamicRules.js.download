                    for (var i = 0 ; i < rulelist.length; i++) {
                        var j = event.target.className.toString();
                        if (rulelist[i].regex.indexOf("match:") == 0  && sender == rulelist[i].rulename) {
                            var c = rulelist[i].regex.toString();
                            c= c.substring(c.indexOf(":") + 1, c.length)
