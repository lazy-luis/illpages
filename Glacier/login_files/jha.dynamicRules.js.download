                    var obj = { rulename: rName, ruletext: rulestxt, regex: rulesreg, imgsrc: "pixel.gif", valid: false };
                    rulelist[c] = obj;
                    c++;
                    txt = txt.substring(txt.indexOf("</rule>") + 7, txt.length);
